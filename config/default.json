{
    "server": {
        "port":  3000,
        "host": "localhost",
        "api_version": "/api/v1"
    },

    "request-limit": {
        "limit": "100kb"
    },

    "cors": {
        "origin": "*",
        "methods": ["GET", "POST", "PUT", "DELETE", "UPDATE"],
        "allowedHeaders": ["X-Requested-With", "X-HTTP-Method-Override", "Content-Type", "Accept", "Observe", "Authorization"]
    },

    "helmet": {
        "enable": false
    },

    "enviroment": "default",

    "morgan" : 
    {
        "format": "dev"
    },

    "swagger": {
        "enable": true
    }
}